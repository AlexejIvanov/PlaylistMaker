<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- <item name=""></item> -->


    <!-- Стиль фона главного экрана -->
    <style name="backgroundColorMainActivity">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <!-- Стиль фона экранов -->
    <style name="backgroundColorActivity">
        <item name="android:background">?attr/colorSurface</item>
    </style>

    <!-- Стиль заголовка экрана-->
    <style name="nameActivity">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <!-- Стиль иконки "Назад"-->
    <style name="backIcon">
        <item name="android:padding">@dimen/padding_medium</item>
        <item name="android:scaleType">center</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:tint">?attr/colorOnSurface</item>
    </style>

    <!-- Стиль кнопок на главном экране -->
    <style name="buttonMain" parent="Widget.MaterialComponents.Button.UnelevatedButton" >
        <item name="android:backgroundTint">@color/yp_white</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/yp_black</item>
        <item name="cornerRadius">@dimen/corner_radius_button</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Стиль текста на экране настроек -->
    <style name="textSettings">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:paddingTop">@dimen/padding_vertical</item>
        <item name="android:paddingBottom">@dimen/padding_vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:drawableTint">?attr/iconColor</item>

    </style>

    <!-- Стиль строки поиска  -->
    <style name="searchBar">
        <item name="android:background">@drawable/search_bar_bg</item>
        <item name="android:drawablePadding">@dimen/corner_radius_search_bar</item>
        <item name="android:paddingStart">@dimen/padding_start_small</item>
        <item name="android:paddingEnd">@dimen/padding_end_small</item>
        <item name="android:lines">1</item>
        <item name="android:maxLength">15</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColorHint">?attr/colorTextHintPrimary</item>
        <item name="android:drawableTint">?attr/colorTextHintPrimary</item>
    </style>

    <!-- Стиль кнопки очистки строки поиска  -->
    <style name="clearButton">
        <item name="android:tint">?attr/colorTextHintPrimary</item>
    </style>

</resources>