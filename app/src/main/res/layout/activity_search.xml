<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/backgroundColorActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:layout_gravity="center_vertical"
            android:src="@drawable/arrow_back"
            style="@style/backIcon"/>

        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:title="@string/search"
            android:textSize="@dimen/text_size_title"
            android:fontFamily="@font/ys_display_medium"
            style="@style/nameActivity"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/search_field_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <EditText
        android:id="@+id/search_edit_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height"
        android:drawableStart="@drawable/search_icon"
        android:inputType="text"
        android:hint="@string/search"
        android:textColor="@color/yp_black"
        style="@style/searchBar"/>

        <ImageView
            android:id="@+id/clear_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="@dimen/margin_small_end"
            android:background="@drawable/search_bar_bg"
            android:src="@drawable/clear_icon"
            android:visibility="gone"
            style="@style/clearButton"/>
    </FrameLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/yp_lightGray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/search_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/search"
                android:drawableTop="@drawable/search_icon"
                style="@style/navigationButton"
                android:drawableTint="@color/yp_blue"
                android:textColor="@color/yp_blue"/>


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/media_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/media_library"
                android:drawableTop="@drawable/media_icon"
                style="@style/navigationButton"/>


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/settings_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/settings"
                android:drawableTop="@drawable/settings_icon"
                style="@style/navigationButton"/>

        </LinearLayout>

</LinearLayout>