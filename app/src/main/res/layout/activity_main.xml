<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="false"
    style="@style/backgroundColorMainActivity">


    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="@string/app_name"
        app:titleTextColor="@color/yp_white"
        android:textSize="@dimen/text_size_title"
        android:fontFamily="@font/ys_display_medium" />


    <Button
        android:id="@+id/search_button"
        style="@style/buttonMain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/margin_top_medium"
        android:text="@string/search"
        app:icon="@drawable/search_icon" />

    <Button
        android:id="@+id/media_button"
        style="@style/buttonMain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/media_library"
        app:icon="@drawable/media_icon" />

    <Button
        android:id="@+id/settings_button"
        style="@style/buttonMain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/settings"
        app:icon="@drawable/settings_icon" />

</LinearLayout>