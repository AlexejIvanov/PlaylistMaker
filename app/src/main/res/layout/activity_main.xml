<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue"
    android:paddingTop="@dimen/padding_top_small"
    android:paddingRight="@dimen/padding_horizontal"
    android:paddingLeft="@dimen/padding_horizontal"
    android:paddingBottom="@dimen/padding_bottom_large">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ys_display_regular"
            android:gravity="start"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_title" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_top_medium"
        android:orientation="vertical">

        <Button
            android:id="@+id/search_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/ys_display"
            android:text="@string/search"
            android:textAllCaps="false"
            android:textColor="@color/yp_black"
            android:textSize="@dimen/text_size_title"
            app:icon="@drawable/search_icon"
            app:iconGravity="textStart"
            app:iconTint="@color/yp_black"
            app:cornerRadius="@dimen/corner_radius_button"
            android:foreground="?attr/selectableItemBackground"/>

        <Button
            android:id="@+id/media_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="@string/media_library"
            android:textSize="@dimen/text_size_title"
            android:textColor="@color/yp_black"
            android:fontFamily="@font/ys_display"
            android:textAllCaps="false"
            app:icon="@drawable/media_icon"
            app:iconGravity="textStart"
            app:iconTint="@color/yp_black"
            app:cornerRadius="@dimen/corner_radius_button"
            android:foreground="?attr/selectableItemBackground"/>

        <Button
            android:id="@+id/settings_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/ys_display"
            android:text="@string/settings"
            android:textAllCaps="false"
            android:textColor="@color/yp_black"
            android:textSize="@dimen/text_size_title"
            app:icon="@drawable/settings_icon"
            app:iconGravity="textStart"
            app:iconTint="@color/yp_black"
            app:cornerRadius="@dimen/corner_radius_button"
            android:foreground="?attr/selectableItemBackground"/>
    </LinearLayout>

</LinearLayout>
