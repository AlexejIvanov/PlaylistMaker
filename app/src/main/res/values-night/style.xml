<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Стиль фона главного экрана -->
    <style name="backgroundColorMainActivity">
        <item name="android:background">@color/yp_black</item>
    </style>

    <!-- Стиль фона остальных экранов -->
    <style name="backgroundColorActivity">
        <item name="android:background">@color/yp_black</item>
    </style>

    <!-- Стиль заголовка экрана-->
    <style name="nameActivity">
        <item name="android:titleTextColor">@color/yp_white</item>
    </style>

    <!-- Стиль иконки-->
    <style name="colorIcon">
        <item name="android:tint">@color/yp_white</item>
    </style>

    <!-- Стиль кнопок на главном экране -->
    <style name="buttonMain">
        <item name="android:backgroundTint">@color/yp_white</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/yp_black</item>
        <item name="cornerRadius">@dimen/corner_radius_button</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Стиль текста на экране настроек -->
    <style name="TextSettings">
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:paddingTop">@dimen/padding_vertical</item>
        <item name="android:paddingBottom">@dimen/padding_vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

</resources>