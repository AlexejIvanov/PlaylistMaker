<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- <item name=""></item> -->

    <!-- Стиль фона главного экрана -->
    <style name="backgroundColorMainActivity">
        <item name="android:background">@color/yp_black</item>
    </style>

    <!-- Стиль фона остальных экранов -->
    <style name="backgroundColorActivity">
        <item name="android:background">@color/yp_black</item>
    </style>

    <!-- Стиль заголовка экрана-->
    <style name="nameActivity">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:titleTextColor">@color/yp_white</item>
    </style>

    <!-- Стиль иконки-->
    <style name="backIcon">
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:scaleType">center</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:tint">@color/yp_white</item>
    </style>



    <!-- Стиль кнопок на главном экране -->
    <style name="buttonMain">
        <item name="android:backgroundTint">@color/yp_white</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/yp_black</item>
        <item name="cornerRadius">@dimen/corner_radius_button</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Стиль текста на экране настроек -->
    <style name="textSettings">
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:paddingTop">@dimen/padding_vertical</item>
        <item name="android:paddingBottom">@dimen/padding_vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <!-- Стиль строки поиска  -->
    <style name="searchBar">
        <item name="android:background">@drawable/search_bar_bg</item>
        <item name="android:drawablePadding">@dimen/corner_radius_search_bar</item>
        <item name="android:paddingStart">@dimen/padding_start_small</item>
        <item name="android:paddingEnd">@dimen/padding_end_small</item>
        <item name="android:lines">1</item>
        <item name="android:maxLength">15</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColorHint">@color/yp_black</item>
        <item name="android:drawableTint">@color/yp_black</item>
    </style>

    <style name="clearButton">
        <item name="android:tint">@color/yp_black</item>
    </style>


    !-- Стиль кнопок поиска навигации между страницами -->
    <style name="navigationButton">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:drawableTint">@color/yp_white</item>
    </style>
</resources>